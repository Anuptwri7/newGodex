        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number Plate"
            android:textColor="@color/black"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/editTextNumberPlate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number Plate"
            android:textColor="@color/black"
            android:background="@drawable/backgroundtext"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/zinc_600"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dealer Info"
            android:textColor="@color/black"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/editTextDealerInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dealer Info"
            android:background="@drawable/backgroundtext"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/zinc_600"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BSAU"
            android:textColor="@color/black"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/editTextBSAU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="BSAU"
            android:background="@drawable/backgroundtext"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/zinc_600"/>

        <!-- Checkbox to toggle border -->
        <CheckBox
            android:id="@+id/checkBoxShowBorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Border"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:checked="true" />

        <Button
            android:id="@+id/buttonPrint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Print"
            android:background="@color/black"
            android:textColor="@color/zinc_200"
            android:layout_marginTop="16dp"

            />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Front Plate"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal" />
        <!-- Container for Front Plate -->
        <RelativeLayout
            android:id="@+id/containerFront"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:paddingBottom="24dp"

            android:minHeight="200dp"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/textViewLetters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""

                android:textColor="@color/black"
                android:textAllCaps="true"
                android:textSize="30sp"
                android:layout_centerInParent="true" />

            <FrameLayout
                android:id="@+id/frameLayoutDealerInfo"
                android:layout_width="wrap_content"
                android:layout_height="14sp"
                android:background="#FFFFFF"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:padding="0dp">

                <TextView
                    android:id="@+id/textViewDealerInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/charleswrightbold"
                    android:layout_centerHorizontal="true"
                    android:text="ssdsdsdsd"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textAllCaps="true"
                    android:textSize="7dp"
                    android:textColor="@android:color/black"/>

            </FrameLayout>
            <TextView
                android:id="@+id/textViewBsauFront"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/charleswrightbold"
                android:layout_alignParentRight="true"
                android:text=""
                android:layout_marginLeft="2dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"

                android:textSize="8dp"
                android:textColor="@android:color/black"/>
        </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rear Plate"

                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal" />

        <!-- Container for Rear Plate -->
        <RelativeLayout
            android:id="@+id/containerFrontRear"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:paddingBottom="24dp"
            android:minHeight="200dp"
            android:background="@drawable/border_rear">

            <TextView
                android:id="@+id/textViewLettersRear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/charleswrightbold"
                android:textSize="30sp"
                android:textAllCaps="true"
                android:layout_centerInParent="true" />

            <FrameLayout
                android:id="@+id/frameLayoutDealerInfoRear"
                android:layout_width="wrap_content"
                android:layout_height="14sp"
                android:background="#f0b40c"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"

                android:padding="0dp">
                <TextView
                    android:id="@+id/textViewDealerInfoRear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/charleswrightbold"
                    android:textAllCaps="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text=""
                    android:textSize="8sp"
                    android:textColor="@android:color/black"/>

            </FrameLayout>
            <TextView
                android:id="@+id/textViewBsauRear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/charleswrightbold"
                android:layout_alignParentRight="true"
                android:text=""
                android:layout_marginLeft="2dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"

                android:textSize="8dp"
                android:textColor="@android:color/black"/>
        </RelativeLayout>




        <TextView
            android:id="@+id/textViewPlateDimensions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/zinc_200"
            android:layout_marginTop="16dp" />



    </LinearLayout>
</ScrollView>
