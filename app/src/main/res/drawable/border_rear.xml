<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#f0b40c" /> <!-- Background color -->
        </shape>
    </item>
    <!-- Border -->
    <item android:visibility="visible" android:left="30dp" android:right="30dp" android:top="30dp" android:bottom="20dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background for the border to surround contents -->
            <stroke
                android:width="8dp"
                android:color="@color/black" />
        </shape>
    </item>
</layer-list>
